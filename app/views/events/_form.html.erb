<%= form_for @event, :url =>{ :controller =>'events', :action => 'create' } do |f| %>
	<%= f.label :name, "Name" %>
	<%= f.text_field :name %>

	<%= f.label :description, "Description" %>
	<%= f.text_area :description %>

	<% if @event.errors.any? %>
		<ul>
			<%@event.errors.full_message.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	<% end%>

<% end %>